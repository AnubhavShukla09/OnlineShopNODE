<body>
<%- include('../includes/navigation.ejs') %>
<% if(orders.length<=0) { %>
<h1>No orders yet!</h1>
<% } else { %>
    <ul>
    <% orders.forEach(order=>{ %>
       <li>
        <h1>
           Order#<%= order.id %>
          </h1>
       <ul>
        <% order.Products.forEach(product=>{ %>
            <li>
             
                  <%= product.title %> (<%= product.OrderItem.quantity %>x)
               
            </li>
            <% }); %> 
       </ul>
    </li>
    <% }); %>  
    </ul>  
    <% } %> 
<%- include('../includes/end.ejs') %>
